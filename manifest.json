{
  "manifest_version": 3,
  "name": "Scout AI",
  "version": "1.4",
  "description": "Enhance your web browsing experience by navigating through any article's content with the click of a button",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
